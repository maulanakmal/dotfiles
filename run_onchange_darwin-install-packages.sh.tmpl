{{ if eq .chezmoi.os "darwin" -}}
#!/bin/zsh

brew bundle --file=/dev/stdin <<EOF

{{ range .packages.darwin.taps -}}
tap {{ . | quote }}
{{ end -}}

{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}

{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
EOF

{{ range .packages.darwin.pipx -}}
pipx install {{ . | quote  }}
{{ end -}}

{{ range .packages.darwin.ansible_galaxy_collections -}}
ansible-galaxy collection install {{ . | quote }}
{{ end -}}

{{ end -}}

